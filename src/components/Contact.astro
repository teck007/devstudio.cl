---
const {
  title = await Astro.slots.render("title"),
  subtitle = await Astro.slots.render("subtitle"),
  subtitle2 = await Astro.slots.render("subtitle2"),
  bg = "bg-main3",
  route = await Astro.slots.render("route"),
} = Astro.props;
---

<section id="contact" class={` mx-auto ${bg} py-10`}>
  <div
    class="flex justify-around items-center mx-auto text-center p-6 rounded-md shadow-lg bg-opacity-80 backdrop-blur-md bg-main4 dark:border dark:border-slate-600"
  >
    <div class="w-3/4 flex flex-col items-center gap-4 text-balance">
      <h2 class="text-4xl font-bold text-white">
        {title}
      </h2>
      <p class="text-lg text-gray-200">
        {subtitle}
      </p>
      <p class="text-lg text-gray-200">
        {subtitle2}
      </p>
    </div>
    <div
      class="max-w-sm bg-main2 rounded-lg p-6 shadow hover:shadow-lg hover:bg-main3 transition-all duration-300"
    >
      <a
        href=`${route}`
        class="btn mx-auto from-teal-400 to-blue-500 text-white py-1 px-2 rounded-lg font-semibold text-lg hover:from-teal-500 hover:to-blue-600 transition-all duration-300"
      >
        Ir a formulario
      </a>
    </div>
  </div>
</section>
