---
interface Props {
	title: string;
	description?: string;
	href: string;
	image?: string;
	techs?: string[];
}

const {
	href,
	title,
	description = "",
	image = undefined,
	techs = [],
} = Astro.props;
---

<li>
	<article
		class="group bg-gradient-to-br from-[#0f1724] to-[#1a2332] rounded-xl overflow-hidden shadow-lg hover:shadow-2xl hover:shadow-cyan-500/10 transition-all duration-300 hover:scale-105 border border-gray-700/50 hover:border-cyan-500/30"
	>
		{
			image ? (
				<img 
					src={image} 
					alt={title} 
					class="w-full h-48 object-cover object-top" 
					loading="lazy"
					width="506"
					height="386"
					decoding="async"
				/>
			) : null
		}
		<div class="p-5">
			<div class="flex items-start justify-between">
				<h3 class="text-2xl font-semibold text-white">{title}</h3>
			</div>

			{
				description ? (
					<p class="mt-3 text-lg text-gray-300">{description}</p>
				) : null
			}

			{
				techs && techs.length ? (
					<ul class="mt-4 flex flex-wrap gap-2">
						{techs.map((t) => (
							<li class="text-md bg-gray-700 text-gray-100 px-2 py-1 rounded-md">
								{t}
							</li>
						))}
					</ul>
				) : null
			}

			<div class="mt-4">
				<a
					href={href}
					target="_blank"
					class="inline-block px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-500 w-full text-center text-base"
					rel="noopener">Visitar sitio</a
				>
			</div>
		</div>
	</article>
</li>
