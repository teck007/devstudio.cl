---
const {
  title = await Astro.slots.render('title'),
  description = await Astro.slots.render('description'),
  items = [],
} = Astro.props;
---

<section id="about" class="bg-main1 text-white py-12 shadow-custom w-full">
    <div class="container mx-auto px-6 lg:px-20 max-w-[90%]">
        <h2 class="text-4xl font-bold text-center mb-6">
            {title}
        </h2>
        <p class="text-center text-xl text-gray-200 mb-10 max-w-full">
            {description}
        </p>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
            {
                items.map((item, index) => (
                    <div class="widget-item group bg-gradient-to-br from-main2/50 to-main1 rounded-xl p-6 shadow-lg hover:shadow-2xl transition-all duration-300 border border-cyan-500/20 hover:border-cyan-400/40 relative overflow-hidden">
                        <div class="absolute inset-0 bg-gradient-to-br from-cyan-500/5 to-violet-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                        <div class="relative z-10">
                            <div class="text-xl font-semibold mb-4 flex items-center">
                                <span class="text-cyan-400">{item.icon ? <item.icon /> : null}</span>
                                <span class="ml-3">{item.title}</span>
                            </div>
                            <p class="text-gray-300 text-lg leading-relaxed">{item.description}</p>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>

<style>
.widget-item:hover {
    transform: scale(1.05);
  }
</style>