---
const {
  title = await Astro.slots.render('title'),
  description = await Astro.slots.render('description'),
  items = [],
} = Astro.props;
---

<section id="about" class="bg-main4 text-white py-12 shadow-custom">
    <div class="container mx-auto px-6 lg:px-20">
        <h2 class="text-4xl font-bold text-center mb-6">
            {title}
        </h2>
        <p class="text-center text-gray-200 mb-10 max-w-full">
            {description}
        </p>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
            {
                items.map((item) => (
                    <div class="widget-item bg-main1 rounded-lg p-6 shadow hover:shadow-lg hover:bg-main1 transition-all duration-300">
                        <div class="text-xl font-semibold mb-4 flex">
                            {item.icon ? <item.icon /> : null} 
                            <span class="ml-2">{item.title}</span>
                        </div>
                        <p class="text-gray-200">{item.description}</p>
                    </div>
                ))
            }
        </div>
    </div>
</section>

<style>
.widget-item:hover {
    transform: scale(1.05);
  }
</style>