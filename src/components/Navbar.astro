---
const {
  title = await Astro.slots.render('title'),
  menu = [],
} = Astro.props;
---
<navbar class="navbar flex justify-center">
  <div class="flex justify-center items-center rounded-lg backdrop-blur-md w-fit fixed z-50">
    <div class="menu">
      {menu.map (({name, href}) => (
    <a class="text-xl md:text-2xl font-semibold text-white group-aria-selected:bg-clip-text
    group-aria-selected:text-transparent group-aria-selected:bg-blue-400 
    transition duration-300 border-b-2 border-transparent link" href={`${href}`}>{name}</a>
      ))}
    </div>
  </div>
</navbar>

<style>
  .menu {
    display: flex;
    gap: 1rem;
  }
  .link {
    transition: all 0.2s;
    border: 2px solid transparent;
    border-radius: 0.75rem;
    padding: 0.25rem 0.75rem;
    position: relative;
  }
  .link:hover {
    border-color: #60a5fa; /* blue-400 */
    background: rgba(96, 165, 250, 0.08);
    box-shadow: 0 2px 8px rgba(96, 165, 250, 0.15);
  }

</style>