---
import Navbar from "../components/Navbar.astro";
import { ClientRouter } from "astro:transitions";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="DevStudio - Desarrollo web profesional e integraciones de Inteligencia Artificial. Creamos sitios web modernos, chatbots y automatizaciones que impulsan tu negocio." />
		<meta name="keywords" content="desarrollo web, inteligencia artificial, chatbots, páginas web, aplicaciones web, Chile, startup tecnología" />
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<!-- Google Fonts - Outfit: moderna y distintiva -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
		<title>{title}</title>
		<ClientRouter />
		<!-- Google tag (gtag.js) -->
		<script is:inline src="https://www.googletagmanager.com/gtag/js?id=AW-17842537256"></script>
		<script is:inline>
		window.dataLayer = window.dataLayer || [];
		function gtag(){dataLayer.push(arguments);}
		gtag('js', new Date());
		gtag('config', 'AW-17842537256');
		</script>
	</head>
	<body>
		<Navbar
			title="DevStudio"
			menu={[
				{
					name: "Inicio",
					href: "/",
				},
				{
					name: "Nosotros",
					href: "/#about",
				},
				{
					name: "Servicios",
					href: "/#services",
				},
				{
					name: "Proyectos",
					href: "/#portfolio",
				},
				{
					name: "Contáctanos",
					href: "/contact",
				},
			]}
		/>
		<div class="min-h-screen flex flex-col">
			<slot />
		</div>
		
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: 'Outfit', system-ui, sans-serif;
		scroll-behavior: smooth;
		width: 100%;
		overflow-x: hidden;
	}
	body {
		margin: 0;
		padding: 0;
		width: 100vw; 

	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>
