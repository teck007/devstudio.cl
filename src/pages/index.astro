---
import Layout from "../layouts/Layout.astro";
import About from "../components/Widget.astro";
import Footer from "../components/Footer.astro";
import handIcon from "../assets/icons/hand-thumb-up.astro";
import lightIcon from "../assets/icons/light-bulb.astro";
import usersIcon from "../assets/icons/users.astro";
import userCircle from "../assets/icons/user-circle.astro";
import computer from "../assets/icons/computer.astro";
import learning from "../assets/icons/learning.astro";
import Services from "../components/Slide.astro";
import Card from "../components/Card.astro";
import { Image } from "astro:assets";
import background from "../assets/images/background.webp";
import slide1 from "../assets/images/slide1.webp";
import slide2 from "../assets/images/slide2.webp";
import slide3 from "../assets/images/slide3.webp";
import legadodefamilia from "../assets/images/legadodefamilia.webp"
---

<Layout title="DevStudio | Desarrollo de soluciones a tu medida">
	<main
		class="flex flex-col text-white justify-center mx-auto h-screen w-full relative overflow-hidden"
	>
		<Image 
			src={background} 
			alt=""
			aria-label="Imagen de fondo devstudio, programador" 
			class="absolute inset-0 w-full h-full object-cover object-top -z-10"
			fetchpriority="high"
			decoding="async"
			width={1920}
			height={1080}
		/>
		<div class="text-xl text-balance text-center me-[28vw] animate-fade-in-up">
			<h1 class="pt-6 text-4xl md:text-7xl font-bold drop-shadow-lg">DevStudio</h1>
			<p class="mt-4 text-2xl m-4 drop-shadow-md">
				Desarrollo de soluciones a tu medida.
			</p>
			<p class="text-lg mt-2 drop-shadow-sm text-cyan-300 font-semibold">Desarrollo web moderno</p>
			<p class="text-lg mt-2 text-violet-300 font-semibold">Inteligencia artificial</p>
			<a href="/contact" class="inline-block mt-8 px-8 py-4 rounded-full hover:bg-main1 hover:animate-none border-2 text-white text-xl font-semibold shadow-lg transition-all duration-300 animate-pulse">Envianos un mensaje</a>
		</div>
	</main>
	<!-- About section -->
	<About
		title="Nosotros"
		description="Somos un equipo especializado en desarrollo web. Combinamos creatividad, experiencia técnica y las últimas tecnologías para crear soluciones digitales que realmente impacten en tu negocio."
		items={[
			{
				title: "Desarrollo web a medida",
				description:
					"Creamos sitios web y aplicaciones personalizadas para negocio y deacuerdo a tus necesidades.",
				icon: computer,
			},
			{
				title: "Integraciones de IA",
				description:
					"Incorporamos chatbots, automatizaciones y herramientas de IA que optimizen procesos y mejoren la experiencia de tus clientes.",
				icon: lightIcon,
			},
			{
				title: "Resultados reales",
				description:
					"Nos enfocamos en que puedas obtener una mejor presencia digital y mejorar procesos internos de tu negocio.",
				icon: handIcon,
			},
			{
				title: "Atención personalizada",
				description:
					"Trabajamos en equipo en cada etapa del proyecto, asegurando que el resultado final supere tus expectativas y cumpla con tus objetivos.",
				icon: userCircle,
			},
			{
				title: "Tecnología de vanguardia",
				description:
					"Utilizamos frameworks modernos y las mejores prácticas para garantizar velocidad, seguridad y escalabilidad.",
				icon: usersIcon,
			},
			{
				title: "Soporte continuo",
				description:
					"No te dejamos solo después del lanzamiento. Ofrecemos mantenimiento, actualizaciones y mejoras constantes.",
				icon: learning,
			},
		]}
	/>
	<!-- Services section -->
	<Services
		title="Nuestros servicios"
		items={[
			{
				imagen_url: slide1,
				texto: "Páginas web modernas: Creamos diseños atractivos con las últimas tecnologías para que tu negocio se destaque en el mercado.",
			},
			{
				imagen_url: slide2,
				texto: "Inteligencia Artificial aplicada: chatbots personalizados, automatización de tareas y asistentes virtuales que trabajan 24/7.",
			},
			{
				imagen_url: slide3,
				texto: "Desarrollo completo: desde una landing page informativa hasta sistemas complejos con paneles de administración y APIs integradas para que tu negocio funcione de manera eficiente.",
			},
		]}
	/>

	<!-- Portfolio section -->
	<section id="portfolio" class="w-full mx-auto px-6 py-16 bg-main1">
		<h2 class="text-4xl text-center font-bold text-white mb-6">Proyectos</h2>
		<p class="text-center text-xl text-gray-200 mb-8 max-w-3xl mx-auto">Conoce algunos de nuestros proyectos.</p>
		<ul class="grid grid-cols-1 sm:grid-cols-1 md:grid-cols-2 xl:grid-cols-4 gap-6 mx-auto max-w-[80%]">
			<Card
				href="https://legadodefamilia.cl"
				title="Fundación Legado de Familia"
				description="Diseño y desarrollo completo con panel administrable para gestionar contenido dinámicamente."
				image={legadodefamilia}
			/>
		</ul>
	</section>
	<Footer />
</Layout>
<style>
	body {
		background-color: white;
	}
	.animate-fade-in-up {
		animation: fadeInUp 1s ease-out;
	}
	@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(40px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}
</style>
