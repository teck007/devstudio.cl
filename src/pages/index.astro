---
import Layout from "../layouts/Layout.astro";
import About from "../components/Widget.astro";
import Footer from "../components/Footer.astro";
import handIcon from "../assets/icons/hand-thumb-up.astro";
import lightIcon from "../assets/icons/light-bulb.astro";
import usersIcon from "../assets/icons/users.astro";
import userCircle from "../assets/icons/user-circle.astro";
import computer from "../assets/icons/computer.astro";
import learning from "../assets/icons/learning.astro";
import Services from "../components/Slide.astro";
import Card from "../components/Card.astro";
---

<Layout title="Devstudio">
	<main
		class="flex flex-col text-white justify-center mx-auto h-screen w-full bg-img relative"
	>
		<div class="text-xl text-balance text-center me-[28vw] animate-fade-in-up">
			<h1 class="pt-6 text-4xl md:text-7xl font-bold drop-shadow-lg">DevStudio</h1>
			<p class="mt-4 text-2xl m-4 drop-shadow-md">
				Desarrollo de soluciones a tu medida.
			</p>
			<a href="/contact" class="inline-block mt-8 px-8 py-4 rounded-full hover:bg-main1 hover:animate-none border-2 text-white text-xl font-semibold shadow-lg transition-all duration-300 animate-pulse">Envianos un mensaje</a>
		</div>
	</main>
	<!-- About section -->
	<About
		title="Nuestra identidad"
		description="Somos una startup de desarrollo de software formada por jóvenes apasionados por la tecnología, la creatividad y la solución de problemas del mundo real. Cada integrante aporta su experiencia única, desde el backend hasta el diseño, trabajando en un ambiente dinámico y de colaboración continua."
		items={[
			{
				title: "Innovación y creatividad:",
				description:
					"Nuestro equipo se esfuerza por proponer soluciones únicas, abordando problemas cotidianos desde nuevas perspectivas.",
				icon: lightIcon,
			},
			{
				title: "Adaptabilidad:",
				description:
					"Nos ajustamos con rapidez a nuevas tendencias, tecnologías, herramientas y metodologías, manteniéndonos siempre vigentes.",
				icon: handIcon,
			},
			{
				title: "Cultura colaborativa:",
				description:
					"Fomentamos el trabajo en equipo, donde cada miembro potencia sus habilidades para alcanzar metas compartidas.",
				icon: usersIcon,
			},
			{
				title: "Orientación al cliente:",
				description:
					"Diseño de productos centrados en las necesidades reales de los usuarios, priorizando experiencias intuitivas y eficaces.",
				icon: userCircle,
			},
			{
				title: "Tecnología moderna:",
				description:
					"Utilización de herramientas de desarrollo actuales, como frameworks y servicios en la nube.",
				icon: computer,
			},
			{
				title: "Aprendizaje continuo:",
				description:
					"Mantenemos un compromiso constante con la actualización y el crecimiento profesional en un sector en permanente cambio.",
				icon: learning,
			},
		]}
	/>
	<!-- Services section -->
	<Services
		title="Nuestros servicios"
		items={[
			{
				imagen_url: "Slide1.webp",
				texto: "Creamos páginas web a medida que se adaptan a las necesidades de tu negocio.",
			},
			{
				imagen_url: "Slide2.webp",
				texto: "Desarrollamos soluciones web con tecnologías modernas y eficientes.",
			},
			{
				imagen_url: "Slide3.webp",
				texto: "Comparte tu idea y nosotros la transformamos en una página lista para funcionar en línea.",
			},
		]}
	/>

	<!-- Portfolio section -->
	<section id="portfolio" class="w-full mx-auto px-6 py-16 bg-main1">
		<h2 class="text-4xl text-center font-bold text-white mb-6">Portafolio</h2>
		<p class="text-center text-xl text-gray-200 mb-8">Aquí mostramos los proyectos que hemos realizado.</p>
		<ul class="grid grid-cols-1 sm:grid-cols-1 md:grid-cols-2 xl:grid-cols-4 gap-6  mx-auto max-w-[80%]">
			<!-- Usamos el componente Card para una sola tarjeta que enlaza a /portfolio -->
			<Card
				href="https://legadodefamilia.cl"
				title="Pagina web fundación legado de familia"
				description="Sitio web, diseño y desarrollo completo. Se creo un panel administrable."
				image="legadodefamilia.webp"
				techs={["Astro", "Tailwind", "Laravel"]}
			/>
		</ul>
	</section>
	<Footer />
</Layout>
<style>
	body {
		background-color: white;
	}

	.bg-img {
		background-image: url("background.png");
		background-size: cover;
		background-position: top;
	}
	@media (max-height: 700px) or (max-width: 400px) {
		#devImage {
			display: none;
		}
	}
	.animate-fade-in-up {
		animation: fadeInUp 1s ease-out;
	}
	@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(40px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}
</style>
