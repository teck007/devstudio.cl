---
import Layout from "../layouts/Layout.astro";
import About from "../components/Widget.astro";
import Services from "../components/Slide.astro";
import Footer from "../components/Footer.astro";
import handIcon from "../assets/icons/hand-thumb-up.astro";
import lightIcon from "../assets/icons/light-bulb.astro";
import usersIcon from "../assets/icons/users.astro";
import userCircle from "../assets/icons/user-circle.astro";
import computer from "../assets/icons/computer.astro";
import learning from "../assets/icons/learning.astro";
import { Image } from 'astro:assets';
import Dev from "../assets/dev.webp";
import Slide1 from "../assets/slide1.webp";
import Slide2 from "../assets/slide2.webp";
import Slide3 from "../assets/slide3.webp";
---

<Layout title="Devstudio">
	<main
		class="flex flex-col items-center justify-center mx-auto h-screen w-full"
	>
		<div class="text-center text-xl text-balance">
			<h1 class="pt-6 text-center text-6xl text-black font-bold p-1.5">
				<p class="">
					Desarrollo de <span class="rotating-text"></span>
				</p>
				<p class="text-main2">a tu medida</p>
			</h1>
			<p class="mt-2 max-w-6xl text-2xl text-gray-800 m-4">
				En <span class="font-semibold">Devstudio</span> creamos sitios web
				y Software a la medida de tu empresa.
			</p>
		</div>
		<div class="mt-8">
			<Image src={Dev} alt="dev programming" class="mx-auto xl:w-4/6 sm:w-3/6 w-1/2"/>
		</div>
	</main>
	<About
		title="Nuestra identidad"
		description="Somos una startup de desarrollo de software formada por jóvenes apasionados por la tecnología, la creatividad y la solución de problemas del mundo real. Cada integrante aporta su experiencia única, desde el backend hasta el diseño, trabajando en un ambiente dinámico y de colaboración continua."
		items={[
			{
				title: "Innovación y creatividad:",
				description:
					"Nuestro equipo se esfuerza por proponer soluciones únicas y disruptivas, abordando problemas cotidianos desde nuevas perspectivas.",
				icon: lightIcon,
			},
			{
				title: "Adaptabilidad:",
				description:
					"Capacidad para adaptarse rápidamente a cambios en tendencias tecnológicas, herramientas y metodologías de trabajo.",
				icon: handIcon,
			},
			{
				title: "Cultura colaborativa:",
				description:
					"Enfoque en el trabajo en equipo, donde cada miembro aporta sus habilidades únicas para un objetivo común.",
				icon: usersIcon,
			},
			{
				title: "Orientación al cliente:",
				description:
					"Diseño de productos centrados en las necesidades reales de los usuarios, priorizando experiencias intuitivas y eficaces.",
				icon: userCircle,
			},
			{
				title: "Tecnología moderna:",
				description:
					"Utilización de herramientas de desarrollo actuales, como frameworks avanzados, servicios en la nube y metodologías ágiles.",
				icon: computer,
			},
			{
				title: "Aprendizaje continuo:",
				description:
					"Compromiso con la formación constante para mantenerse al día en un sector en constante evolución.",
				icon: learning,
			},
		]}
	/>
</Layout>
<Services
	title="Nuestros servicios"
	items={[
		{
			image: Slide1,
			description:
				"Desarrollo de páginas web personalizadas para tu negocio.",
		},
		{
			image: Slide2,
			description: "Desarrollo web utilizando las últimas tecnologías.",
		},
		{
			image: Slide3,
			description:
				"Tú solo cuéntanos tu idea, nosotros hacemos el resto hasta que tu página esté en línea y operativa.",
		},
	]}
/>
<Footer />
<style>
	body {
		background-color: white;
	}
	#devImage {
		animation: input 1s ease-in-out;
	}
	@media (max-height: 700px) or (max-width: 400px) {
		#devImage {
			display: none;
		}
	}
	@keyframes input {
		0% {
			opacity: 0;
		}
		100% {
			opacity: 1;
		}
	}
	/* Contenedor del texto rotativo */
	.rotating-text {
		display: inline-block;
		position: relative;
		white-space: nowrap;
	}

	/* Keyframes para cambiar el texto */
	@keyframes rotateText {
		0%,
		20% {
			content: "Soluciones";
		}
		20%,
		40% {
			content: "Proyectos";
		}
		40%,
		60% {
			content: "Sitios web";
		}
		60%,
		80% {
			content: "Software";
		}
		80%,
		100% {
			content: "Soluciones";
		}
	}

	.rotating-text::after {
		content: "soluciones";
		animation: rotateText 20s ease-in-out infinite;
	}
</style>
