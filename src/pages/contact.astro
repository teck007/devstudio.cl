---
import Layout from "../layouts/Layout.astro";
import { actions } from "astro:actions";
const apiUrl = import.meta.env.PUBLIC_API_URL;
---

<Layout title="Devstudio">
  <div class="h-screen bg-main1 flex items-center justify-center">
    <form
      id="contact"
      class="bg-white rounded-lg shadow-lg p-8 w-full max-w-lg"
      action={actions.sendMessage}
      method="POST"
    >
      <h2 class="text-2xl font-bold text-gray-800 mb-6 text-center">
        Contáctanos
      </h2>
      <div class="mb-4">
        <label for="name" class="block text-gray-700 font-medium mb-2">
          Nombre
        </label>
        <input
          type="text"
          id="name"
          name="name"
          required
          placeholder="Tu nombre y apellido"
          class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400"
        />
      </div>
      <div class="mb-4">
        <label for="email" class="block text-gray-700 font-medium mb-2">
          Correo Electrónico
        </label>
        <input
          type="email"
          id="email"
          name="email"
          required
          placeholder="tu@correo.com"
          class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400"
        />
      </div>
      <div class="mb-4">
        <label for="message" class="block text-gray-700 font-medium mb-2">
          Mensaje
        </label>
        <textarea
          id="message"
          name="message"
          rows="5"
          required
          placeholder="Escribe tu mensaje aquí"
          class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400"
        ></textarea>
      </div>
      <div id="message-container" class="mb-4 hidden"></div>
      <div class="flex justify-center">
        <button
          type="submit"
          class="bg-blue-500 text-white px-6 py-2 rounded-lg font-medium hover:bg-blue-600 transition-colors disabled:opacity-50 disabled:cursor-not-allowed"
          id="btn-send"
        >
          Enviar Mensaje
        </button>
      </div>
    </form>
  </div>
</Layout>

<script>
  import { actions } from "astro:actions";

  function init_form() {
    const form = document.getElementById("contact") as HTMLFormElement;
    const btnSend = document.getElementById("btn-send") as HTMLButtonElement;
    const messageContainer = document.getElementById("message-container") as HTMLDivElement;
    
    if (form && btnSend) {
      const originalText = btnSend.textContent;
      
      form.addEventListener("submit", async (e) => {
        e.preventDefault();
        
        btnSend.textContent = "Enviando...";
        btnSend.disabled = true;
        
        if (messageContainer) {
          messageContainer.classList.add("hidden");
        }

        try {
          const formData = new FormData(form);
          const { data, error } = await actions.sendMessage(formData);
          
          if (error) {
            messageContainer.textContent = error.message || 'Error al enviar el mensaje';
            messageContainer.className = 'mb-4 p-4 bg-red-100 border border-red-400 text-red-700 rounded-lg';
            messageContainer.classList.remove("hidden");
          } else if (data) {
            if (data.success) {
              messageContainer.textContent = data.message;
              messageContainer.className = 'mb-4 p-4 bg-green-100 border border-green-400 text-green-700 rounded-lg';
              messageContainer.classList.remove("hidden");
              form.reset();
            } else {
              messageContainer.textContent = data.message;
              messageContainer.className = 'mb-4 p-4 bg-red-100 border border-red-400 text-red-700 rounded-lg';
              messageContainer.classList.remove("hidden");
            }
          }
        } catch (error) {
          console.error('Error:', error);
          messageContainer.textContent = 'Error al enviar el mensaje. Por favor, intenta nuevamente.';
          messageContainer.className = 'mb-4 p-4 bg-red-100 border border-red-400 text-red-700 rounded-lg';
          messageContainer.classList.remove("hidden");
        } finally {
          btnSend.textContent = originalText;
          btnSend.disabled = false;
        }
      });
    }
  }
  document.addEventListener("astro:page-load", init_form);
</script>
